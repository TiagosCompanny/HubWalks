@model HubWalks.Bussines.Models.JobOrder

@{
    ViewData["Title"] = "Detalhes da Ordem de Serviço";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Detalhes da Ordem de Serviço</h1>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Projeto</dt>
                <dd class="col-sm-9">@Model.NomeProjeto</dd>

                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">Data da Solicitação</dt>
                <dd class="col-sm-9">@Model.DataSolicitacao.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">@Model.IdClient</dd> @* Aqui ideal seria exibir o NomeCliente *@

                <dt class="col-sm-3">Closer</dt>
                <dd class="col-sm-9">@Model.Closer</dd>

                <dt class="col-sm-3">SDR/BDR</dt>
                <dd class="col-sm-9">@Model.Sdr_Bdr</dd>

                <dt class="col-sm-3">% Comissão Comercial</dt>
                <dd class="col-sm-9">@Model.PercentualComissaoComercial %</dd>

                <dt class="col-sm-3">Observação</dt>
                <dd class="col-sm-9">@Model.Observacao</dd>

                <dt class="col-sm-3">Prazo</dt>
                <dd class="col-sm-9">@Model.Prazo.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Promessas</dt>
                <dd class="col-sm-9">@Model.Promessas</dd>

                <dt class="col-sm-3">Valor</dt>
                <dd class="col-sm-9">@Model.Valor.ToString("C")</dd>

                <dt class="col-sm-3">Forma de Pagamento</dt>
                <dd class="col-sm-9">@Model.FormaPagamento</dd>
            </dl>
        </div>
    </div>
</div>
