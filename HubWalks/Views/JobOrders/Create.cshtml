@model HubWalks.Bussines.Models.JobOrder

@{
    ViewData["Title"] = "Nova Ordem de Serviço";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Nova Ordem de Serviço</h1>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>

    @if (ViewBag.SemClientesOuBdr == true)
    {
        <div class="alert alert-warning" role="alert">
            ⚠️ Não há <strong>Clientes</strong> ou <strong>SDR/BDR</strong> cadastrados.
            Cadastre-os antes de criar uma ordem de serviço.
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NomeProjeto" class="form-label"></label>
                        <input asp-for="NomeProjeto" class="form-control" />
                        <span asp-validation-for="NomeProjeto" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdClient" class="form-label">Cliente</label>
                        <select asp-for="IdClient" class="form-select" asp-items="ViewBag.Clientes">
                            <option value="">-- selecione --</option>
                        </select>
                        <span asp-validation-for="IdClient" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Closer" class="form-label"></label>
                        <input asp-for="Closer" class="form-control" />
                        <span asp-validation-for="Closer" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SdrBdrId" class="form-label">SDR/BDR</label>
                        <select asp-for="SdrBdrId" class="form-select" asp-items="ViewBag.SdrBdrs">
                            <option value="">-- selecione --</option>
                        </select>
                        <span asp-validation-for="SdrBdrId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PercentualComissaoComercial" class="form-label"></label>
                        <input asp-for="PercentualComissaoComercial" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="PercentualComissaoComercial" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Observacao" class="form-label"></label>
                        <textarea asp-for="Observacao" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Prazo" class="form-label"></label>
                        <input asp-for="Prazo" type="date" class="form-control" />
                        <span asp-validation-for="Prazo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Valor" class="form-label"></label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Promessas" class="form-label"></label>
                        <textarea asp-for="Promessas" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Promessas" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FormaPagamento" class="form-label"></label>
                        <input asp-for="FormaPagamento" class="form-control" />
                        <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <button type="reset" class="btn btn-outline-secondary">Limpar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
