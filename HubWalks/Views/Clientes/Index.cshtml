@model IEnumerable<HubWalks.Bussines.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="mb-3">Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Cliente</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().NomeCliente)</th>
                <th>@Html.DisplayNameFor(m => m.First().Email)</th>
                <th>@Html.DisplayNameFor(m => m.First().NumeroTelefone)</th>
                <th>@Html.DisplayNameFor(m => m.First().CpfCnpj)</th>
                <th>@Html.DisplayNameFor(m => m.First().DataCadastro)</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomeCliente</td>
                    <td>@item.Email</td>
                    <td>@item.NumeroTelefone</td>
                    <td>@item.CpfCnpj</td>
                    <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-outline-secondary">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
