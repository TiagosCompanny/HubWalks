@model IEnumerable<HubWalks.Bussines.Models.NotaFiscal>

@{
    ViewData["Title"] = "Notas Fiscais";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Notas Fiscais</h1>
        <a asp-action="Create" class="btn btn-success">Nova Nota Fiscal</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.First().IdJobOrder)</th>
                            <th>@Html.DisplayNameFor(m => m.First().DataEmissao)</th>
                            <th>@Html.DisplayNameFor(m => m.First().ValorTotal)</th>
                            <th>@Html.DisplayNameFor(m => m.First().NumeroNota)</th>
                            <th>@Html.DisplayNameFor(m => m.First().Serie)</th>
                            <th>@Html.DisplayNameFor(m => m.First().ChaveAcesso)</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdJobOrder</td>
                                <td>@item.DataEmissao.ToString("dd/MM/yyyy")</td>
                                <td>@item.ValorTotal.ToString("C")</td>
                                <td>@item.NumeroNota</td>
                                <td>@item.Serie</td>
                                <td class="text-truncate" style="max-width: 180px;">@item.ChaveAcesso</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Detalhes</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
