@model HubWalks.Bussines.Models.NotaFiscal

@{
    ViewData["Title"] = "Detalhes da Nota Fiscal";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Detalhes da Nota Fiscal</h1>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Job Order</dt>
                <dd class="col-sm-9">@Model.IdJobOrder</dd>

                <dt class="col-sm-3">Data de Emissão</dt>
                <dd class="col-sm-9">@Model.DataEmissao.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Valor Total</dt>
                <dd class="col-sm-9">@Model.ValorTotal.ToString("C")</dd>

                <dt class="col-sm-3">Número da Nota</dt>
                <dd class="col-sm-9">@Model.NumeroNota</dd>

                <dt class="col-sm-3">Série</dt>
                <dd class="col-sm-9">@Model.Serie</dd>

                <dt class="col-sm-3">Chave de Acesso</dt>
                <dd class="col-sm-9 text-break">@Model.ChaveAcesso</dd>
            </dl>
        </div>
    </div>
</div>
