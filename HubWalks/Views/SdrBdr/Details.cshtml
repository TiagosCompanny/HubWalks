@model HubWalks.Bussines.Models.Sdr_Bdr

@{
    ViewData["Title"] = "Detalhes SDR/BDR";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Detalhes do SDR/BDR</h1>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.IdSdr_Bdr" class="btn btn-primary">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.IdSdr_Bdr" class="btn btn-danger">Excluir</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Data de Cadastro</dt>
                <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>
    </div>
</div>
